<div class="container" style="margin-top: 5%;">
    <div class="row">
        
        <div class="col-md-12" style="background: rgb(83, 209, 83);">
            {{#each writer}}
           <h1>{{this.name}}</h1>
           <h6 style="color: white;">{{this.email}}</h6>
           {{/each}}
        </div>
        <div class="col-md-12" id="writeDiv" style="margin-top: 7%;">
            <h1 style="font-family: 'Fjalla One', sans-serif;">New Article</h1>
            <form action="/article/create" method="POST" style="margin-top: 7%;">
              <input type="text" name="title" placeholder="title" style="font-weight: bolder;"><hr>
              <textarea name="article_body" placeholder="aricle"></textarea>
              {{#each writer}}
              <label for="#writerEmail">Email</label>
              <input name="email" type="email" value="{{this.email}}" id="writerEmail">
              {{/each}}
              <button type="submit" class="btn btn-success btn-block" style="margin-top: 7%;">Submit</button>
            </form>
            
        </div>
        
    </div>
</div>